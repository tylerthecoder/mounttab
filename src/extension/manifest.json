{
  "manifest_version": 3,
  "name": "MountTab",
  "description": "Mount browser tabs to a working directory",
  "version": "1.0",
  "permissions": [
    "tabs",
    "tabCapture",
    "debugger",
    "nativeMessaging",
    "management",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "ws://localhost/*"
  ],
  "action": {
    "default_title": "Open Menu",
    "default_popup": "popup.html"
  },
  "minimum_chrome_version": "116",
  "background": {
    "service_worker": "background.js"
  }
}
